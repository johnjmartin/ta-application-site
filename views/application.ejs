<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/css/styles.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div class="page-header">
  <div class="row vbottom">
    <div class="col-sm-1">
      <img src="/images/queens.jpeg" alt="Mountain View" style="width:300px;height:75px;">
    </div>
  	<div class="col-sm-offset-3 col-sm-4 form-center text-center">
      <h1>T.A. Application</h1>
    </div>
    <div class="col-sm-2 col-sm-offset-1">
        <a href="/logout" class="btn btn-default btn-sm" name=>Logout</a>
        <h3><span class="label"></span> <%= user.lname %>, <%= user.fname %> </h3>
      </div>
  </div>
</div>

<div class="col-md-4 col-md-offset-4">
	<div class="form-center text-center">
    <h3><span></span>Choose Courses to Apply</h3>
	</div>
</div>
<div class="container">
  <form action="/profile" method="post">
  <div class="row">
    <div class="col-sm-6">
        <div class="col-sm-6 pull-left">
          <div class="text-center">
          <h1><span></span> Fall</h1>
        </div>
      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <% for (var j = 0; j < 6; j++) { %>
          <div class="row">
            <div class="col-4 pull-left">
              <select class="form-control" id="sel1">
                <option>Course Code</option>
                <option value="101">CISC 101</option>
                <option value="102">CISC 102</option>
                <option value="103">CISC 103</option>
              </select>
           </div>
            <div class="col-1 pull-left">
              <button type="button" class="btn btn-default" name="fallTA">X</button>
            </div>

            <div class="col-4 pull-left">
              <input class="form-control" id="Fg" type="text" name="fallGrade">
            </div>
          </div>

      <% } %>
    </div>
      <div class="col-sm-6">
        <div class="col-sm-6 pull-right">
          <div class="text-center">
          <h1><span></span> Winter</h1>
        </div>
      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <% for (var i = 0; i < 6; i++) { %>

          <div class="row">
            <div class="col-4 pull-right">
              <select class="form-control" id="sel1">
                <option>Course Code</option>
                <option>CISC 101</option>
                <option>CISC 102</option>
                <option>CISC 103</option>
              </select>
           </div>
            <div class="col-1 pull-right">
              <button type="button" class="btn btn-default">X</button>
            </div>

            <div class="col-4 pull-right">
              <input class="form-control" id="Fg1" type="text" name="">
            </div>
          </div>

        <% } %>
    </div>
  </div>
</div>
<br>
<div class="container">
	<div class="page-footer text-center">
		<button type="submit" class="btn btn-success" name="submitButton">Submit</button>
	</div>
</div>
</form>
</body>
</html>
