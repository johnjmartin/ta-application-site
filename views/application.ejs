<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="/css/styles.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">T.A. Application</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">Grades</a></li>
      <li><a href="#">Application</a></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Account
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Sign Out</a></li>
        </ul>
      </li>
    </ul>
  </div>
</nav>
<div class="page-header">
  <div class="row vbottom">
    <div class="col-sm-1">
      <img src="/images/queens.jpeg" alt="Queen's Logo" style="width:300px;height:75px;">
    </div>
    <div class="col-md-4 col-md-offset-3">
      <h1>Application</h1>
    </div>
  </div>
</div>

<div class="container">
  <form action="/profile" method="post">
  <div class="row">
    <div class="col-sm-6">
        <div class="col-sm-6 pull-left">
          <div class="text-center">
          <h1><span></span> Fall</h1>
        </div>
      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <% for (var j = 0; j < 6; j++) { %>
          <div class="row">
            <div class="col-4 pull-left">
              <select class="form-control" id="sel1">
                <option>Course Code</option>
                <option value="101">CISC 101</option>
                <option value="102">CISC 102</option>
                <option value="103">CISC 103</option>
              </select>
           </div>
            <div class="col-1 pull-left">
              <button type="button" class="btn btn-default" name="fallTA">X</button>
            </div>

            <div class="col-4 pull-left">
              <input class="form-control" id="Fg" type="text" name="fallGrade">
            </div>
          </div>

      <% } %>
    </div>
      <div class="col-sm-6">
        <div class="col-sm-6 pull-right">
          <div class="text-center">
          <h1><span></span> Winter</h1>
        </div>
      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <% for (var i = 0; i < 6; i++) { %>

          <div class="row">
            <div class="col-4 pull-right">
              <select class="form-control" id="sel1">
                <option>Course Code</option>
                <option>CISC 101</option>
                <option>CISC 102</option>
                <option>CISC 103</option>
              </select>
           </div>
            <div class="col-1 pull-right">
              <button type="button" class="btn btn-default">X</button>
            </div>

            <div class="col-4 pull-right">
              <input class="form-control" id="Fg1" type="text" name="">
            </div>
          </div>

        <% } %>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="page-footer text-center">
    <button type="submit" class="btn btn-success" name="submitButton">Submit</button>
    <br>
  </div>
</div>
</form>
</body>
</html>
