<!-- views/grades.ejs -->
<!doctype html>
<html>
<head>

	 <% include partials/header %>
   <script type = "text/javascript">
      $(document).ready(function() {
        <%if (user.grades) { %>
        var grades = <%- JSON.stringify(user.grades.grades) %>;

        for (i = 0; i < grades.length; i++){
          temp = grades[i].course + ", " + grades[i].grade + "\n"
        }
        $('#grades').val(temp);
  <% } %>
      });
  </script>
</head>
<body>

<!-- Navigation Header (should be consistent on each page) -->
<% include partials/nav %>



<div class="page-header">
  <div class="row vbottom">
    <div class="col-sm-1">
      <img src="/images/queens.jpeg" alt="Queen's Logo" style="width:300px;height:75px;">
    </div>
    <div class="col-md-4 col-md-offset-3">
      <h1>Transcript</h1>
    </div>
  </div>
</div>
<div class="col-md-4 col-md-offset-4">
<% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
  <% } %>
  <div class="text-center">
    <small>Please enter your grades in the text area below. Format must be as follows: <br>
      CISC 101, B+ <br>
      CISC 121, A- <br>
      BIOL 103, B <br>
    </small>
    <br>
    <br>
    <form action="/grades" method="post">
          <div id="gradeTable">
            <textarea id="grades" value='SD' name="grades"></textarea>
          </div>
          <br>
          <button type="submit" class="btn btn-success" name="submitButton">Submit</button>
          <br>

  </div>
</div>
</form>
</body>
</html>