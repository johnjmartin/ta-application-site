<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="/css/styles.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>


<!-- Navigation Header (should be consistent on each page) -->
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">T.A. Application</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/grades">Grades</a></li>
      <li><a href="/application">Application</a></li>
      <%if (user.admin) { %>
        <li><a href="/admin">Admin</a></li>
      <% }%> 
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Account
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="/profile">Profile</a></li>
          <li><a href="/logout">Sign Out</a></li>
        </ul>
      </li>
    </ul>
  </div>
</nav>


<div class="page-header">
  <div class="row vbottom">
    <div class="col-sm-1">
      <img src="/images/queens.jpeg" alt="Queen's Logo" style="width:300px;height:75px;">
    </div>
    <div class="col-md-4 col-md-offset-3">
      <h1>User Profile</h1>
    </div>
  </div>
</div>

<div class="container">
  <form action="/grades" method="post">
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%= user.fname +" "+ user.lname %> </h3>

                    <p>
                        <strong>Email</strong>: <input disabled class="form-control" type="text" value=<%= user.email%> ><br>
                        <strong>First Name</strong>: <input class="form-control" type="text" name="fname" value=<%= user.fname%> ><br>
                        <strong>Last Name</strong>: <input class="form-control" type="text" name="lname" value=<%= user.lname%> ><br>
                        <strong>Social Insurance Number</strong>: <input class="form-control" type="text" name="SIN"><br>
                        <strong>Bank Account (Direct Deposit)</strong>: <input class="form-control" type="text" name="depo"><br>
                    </p>

            </div>
        </div>
    </div>      

    <div class="text-center">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
  </form>
</div>

</body>
</html>