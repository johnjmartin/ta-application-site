<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="application.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">
	<div class="page-header text-center">
		<h1><span class="label"></span> <%= user.fname %>, <%= user.lname %> </h1>
    <h1><span></span>T.A. Application</h1>
	</div>
</div>
<div class="col-md-4 col-md-offset-4">
	<div class="form-center text-center">
		<label for "text-center">Upload Transcript</label>
  		<input type="file" class="form-control-file text-cenet col-md-10 col-md-offset-2" id="exampleInputFile" aria-describedby="
      fileHelp">
      <br>
      <small id="fileHelp" class="form-text text-muted">This will automatically fill in your courses and grades.</small>
		</div>
</div>

<div class="row">
  <div class="col-sm-6">
      <div class="col-sm-6">
        <div class="text-center">
        <h1><span></span> Fall</h1>
      </div>
    </div>
      <div class="container pull-left">
        <div class="row">
      <form action="/profile" method="post">
         <select name="course">
            <option value="101">CISC 101</option>
            <option value="102">CISC 102</option>
            <option value="103">CISC 103</option>
            <option value="104">CISC 104</option>
          </select>
             <input type="checkbox" name="hasTaed" value="true">TA'ed course before?
             <label>Course Grade:</label>
          <input type="grade" name="grade"/>
        <input type="submit" value="Submit"/>
        </div>
      </form>
        </div>
      </div>
  </div>
</div>
<div class="container">
	<div class="page-footer text-center">
		<a href="/logout" class="btn btn-default btn-sm" name=>Logout</a>
	</div>
</div>
</body>
</html>
