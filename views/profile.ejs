<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/css/application.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<style>
		body 		{ padding-top:20px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="page-header row">
  <div class="text-left col-sm-1">
    <img src="/images/queens.jpeg" alt="Mountain View" style="width:400px;height:100px;">
  </div>
	<div class="text-center col-sm-10">
    <h1><span></span>T.A. Application</h1>
    <h3><span></span>Please Enter Grades</h3>
  <ul id="right">
    <h1><span class="label"></span> <%= user.fname %>, <%= user.lname %> </h1>
  </ul>
</div>
</div>
<div class="col-md-4 col-md-offset-4">
	<div class="form-center text-center">
		<label for "text-center">Upload Transcript</label>
  		<input type="file" class="form-control-file text-cenet col-md-10 col-md-offset-2" id="exampleInputFile" aria-describedby="
      fileHelp">
      <br>
      <small id="fileHelp" class="form-text text-muted">This will automatically fill in your courses and grades.</small>
		</div>
</div>
<div class="container">
  <form action="/profile" method="post">
  <div class="row">
    <div class="col-sm-6">
        <div class="col-sm-6 pull-left">
          <div class="text-center">
          <h1><span></span> Fall</h1>
        </div>
      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <% for (var j = 0; j < 6; j++) { %>
          <div class="row">
            <div class="col-4 pull-left">
              <select class="form-control" id="sel1">
                <option>Course Code</option>
                <option value="101">CISC 101</option>
                <option value="102">CISC 102</option>
                <option value="103">CISC 103</option>
              </select>
           </div>
            <div class="col-1 pull-left">
              <button type="button" class="btn btn-default" name="fallTA">X</button>
            </div>

            <div class="col-4 pull-left">
              <input class="form-control" id="Fg" type="text" name="fallGrade">
            </div>
          </div>

      <% } %>
    </div>
      <div class="col-sm-6">
        <div class="col-sm-6 pull-right">
          <div class="text-center">
          <h1><span></span> Winter</h1>
        </div>
      </div>
      <br>
      <br>
      <br>
      <br>
      <br>
      <% for (var i = 0; i < 6; i++) { %>

          <div class="row">
            <div class="col-4 pull-right">
              <select class="form-control" id="sel1">
                <option>Course Code</option>
                <option>CISC 101</option>
                <option>CISC 102</option>
                <option>CISC 103</option>
              </select>
           </div>
            <div class="col-1 pull-right">
              <button type="button" class="btn btn-default">X</button>
            </div>

            <div class="col-4 pull-right">
              <input class="form-control" id="Fg1" type="text" name="">
            </div>
          </div>

        <% } %>
    </div>
  </div>
  <div class="col-8">
      <button type="submit" class="btn btn-success" name="submitButton">Submit</button>
  </div>
</form>
</div>
<div class="container">
	<div class="page-footer text-center">
		<a href="/logout" class="btn btn-default btn-sm" name=>Logout</a>
	</div>
</div>
</body>
</html>
