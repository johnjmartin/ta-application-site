<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <% include partials/header %>
</head>
<body>


<!-- Navigation Header (should be consistent on each page) -->
<% include partials/nav %>



<div class="page-header">
  <div class="row vbottom">
    <div class="col-sm-1">
      <img src="/images/queens.jpeg" alt="Queen's Logo" style="width:300px;height:75px;">
    </div>
    <div class="col-md-4 col-md-offset-3">
      <h1>User Profile</h1>
    </div>
  </div>
</div>

<div class="container">
  <form action="/grades" method="post">
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%= user.fname +" "+ user.lname %> </h3>

                    <p>
                        <strong>Email</strong>: <input disabled class="form-control" type="text" value=<%= user.email%> ><br>
                        <strong>First Name</strong>: <input class="form-control" type="text" name="fname" value=<%= user.fname%> ><br>
                        <strong>Last Name</strong>: <input class="form-control" type="text" name="lname" value=<%= user.lname%> ><br>
                        <strong>Social Insurance Number</strong>: <input class="form-control" type="text" name="SIN"><br>
                        <strong>Bank Account (Direct Deposit)</strong>: <input class="form-control" type="text" name="depo"><br>
                    </p>

            </div>
        </div>
    </div>      

    <div class="text-center">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
  </form>
</div>

</body>
</html>